<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".gui.activites.SettingsActivity">

    <Button
        android:id="@+id/btnCallHotline"
        android:layout_width="411dp"
        android:layout_height="wrap_content"
        android:text="@string/strCallHotline"
        android:textAllCaps="false"
        app:layout_constraintBottom_toTopOf="@+id/txtvUrl"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtvUrl"
        android:layout_width="411dp"
        android:layout_height="wrap_content"
        android:text="@string/strCompanyUrl"
        android:textAlignment="center"
        android:textColor="#3949AB"
        android:textSize="24sp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnCallHotline" />

    <WebView
        android:id="@+id/webViewHtmlHelpText"
        android:layout_width="410dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtvUrl" />
</androidx.constraintlayout.widget.ConstraintLayout>