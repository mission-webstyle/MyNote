<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="de.rhistel.mynote">

    <!--    Berechtigungen der App-->
    <uses-permission android:name="android.permission.CALL_PHONE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".gui.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".gui.SettingsActivity"
            android:parentActivityName=".gui.MainActivity"
            android:label="@string/strSettingsText">

        </activity>
        <activity android:name=".gui.NoteDetailsActivity"
            android:parentActivityName=".gui.MainActivity"
            android:label="@string/strMyNoteDetailsLabel">

        </activity>
    </application>

</manifest>