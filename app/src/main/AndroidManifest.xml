<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="de.rhistel.mynote">
    <!-- Berechtigungen der App -->
    <uses-permission android:name="android.permission.CALL_PHONE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".gui.activites.LocationActivity"></activity>
        <activity
            android:name=".gui.activites.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".gui.activites.SettingsActivity"
            android:label="@string/strSettingsText"
            android:parentActivityName=".gui.activites.MainActivity"></activity>
        <activity
            android:name=".gui.activites.NoteDetailsActivity"
            android:label="@string/strMyNoteDetailsLabel"
            android:parentActivityName=".gui.activites.MainActivity"></activity>
    </application>

</manifest>